<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_team_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prakshaljain.bollyholly.TeamName">

    <TextView
        android:text="Enter Team Names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2"
        android:gravity="center"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Team A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="44dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:textSize="30sp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:id="@+id/teamaname"
        android:layout_alignParentEnd="true" />



    <TextView
        android:text="Team B"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teamaname"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:textSize="30sp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:id="@+id/teambname"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_below="@+id/teambname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/teamdone" />
</RelativeLayout>
